<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorGray" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorLeanBlack" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorLeanWhite" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <stroke android:width="1dp" android:color="@color/colorLeanBlack" />
        </shape>
    </item>
</selector>
